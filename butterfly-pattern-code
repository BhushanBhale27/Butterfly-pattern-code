for(var i=1;i<=4;i++){
  var str=""
  for(var j=1;j<=i;j++){
    str=str+"*"
  }
  for(var j=1;j<=8-2*i;j++){
    str=str+" "
  }
  for(var j=1;j<=i;j++){
    str=str+"*"
  }
  console.log(str);
}
for(i=4;i>=1;i--){
  var str=""
  for(var j=1;j<=i;j++){
    str=str+"*"
  }
  for(var j=1;j<=8-2*i;j++){
    str=str+" "
  }
  for(var j=1;j<=i;j++){
    str=str+"*"
  }
  console.log(str);
  
}

  
